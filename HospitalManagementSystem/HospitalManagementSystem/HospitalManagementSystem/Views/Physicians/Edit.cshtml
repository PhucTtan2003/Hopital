<h2>Chỉnh Sửa Thông Tin Bác Sĩ</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="DoctorId" />

    <div class="form-group">
        <label asp-for="FullName" class="control-label"></label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Position" class="control-label"></label>
        <input asp-for="Position" class="form-control" />
        <span asp-validation-for="Position" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Specialty" class="control-label"></label>
        <input asp-for="Specialty" class="form-control" />
        <span asp-validation-for="Specialty" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DescriptionDoctor" class="control-label"></label>
        <textarea asp-for="DescriptionDoctor" class="form-control"></textarea>
        <span asp-validation-for="DescriptionDoctor" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Experience" class="control-label"></label>
        <textarea asp-for="Experience" class="form-control"></textarea>
        <span asp-validation-for="Experience" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Education" class="control-label"></label>
        <textarea asp-for="Education" class="form-control"></textarea>
        <span asp-validation-for="Education" class="text-danger"></span>
    </div>

    <!-- Hiển thị hình ảnh hiện tại -->
    <div class="form-group">
        <label asp-for="ImageUrl" class="control-label">Hình Ảnh Hiện Tại</label>
        <br />
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" alt="Hình ảnh bác sĩ" style="width: 100px; height: auto;" />
        }
        else
        {
            <span>Không có hình ảnh</span>
        }
    </div>

    <!-- Trường chọn tệp hình ảnh mới -->
    <div class="form-group">
        <label for="Image" class="control-label">Chọn Hình Ảnh Mới</label>
        <input type="file" name="Image" class="form-control" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Lưu" class="btn btn-primary" />
    </div>
</form>

